<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.bmilk.amp.ampService.mapper.AmpConfigItemMapper">
    <resultMap id = "AmpConfigItemEntity" type = "cn.bmilk.amp.ampService.mapper.entity.AmpConfigItemEntity">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_at" property="createAt"/>
        <result column="update_at" property="updateAt"/>
        <result column="unique_token" property="uniqueToken"/>
        <result column="environment" property="environment"/>
        <result column="app_id" property="appId"/>
        <result column="app_name" property="appName"/>
        <result column="config_key" property="configKey"/>
        <result column="config_value" property="configValue"/>
        <result column="config_type" property="configType"/>
        <result column="config_desc" property="configDesc"/>
    </resultMap>

    <sql id="Base_column_list">
        ID,
        CREATE_TIME,
        UPDATE_TIME,
        CREATE_AT,
        UPDATE_AT,
        UNIQUE_TOKEN,
        ENVIRONMENT,
        APP_ID,
        APP_NAME,
        CONFIG_KEY,
        CONFIG_VALUE,
        CONFIG_TYPE,
        CONFIG_DESC
    </sql>

    <insert id="insert">
        <selectKey keyColumn="id" keyProperty="entity.id" resultType="long" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO AMP_CONFIG_ITEM(
            CREATE_TIME,
            UPDATE_TIME,
            CREATE_AT,
            UPDATE_AT,
            UNIQUE_TOKEN,
            ENVIRONMENT,
            APP_ID,
            APP_NAME,
            CONFIG_KEY,
            CONFIG_VALUE,
            CONFIG_TYPE,
            CONFIG_DESC
        ) VALUE(
            NOW(),
            NOW(),
            'SYS',
            'SYS',
            0,
            #{entity.environment},
            #{entity.appId},
            #{entity.appName},
            #{entity.configKey},
            #{entity.configValue},
            #{entity.configType},
            #{entity.configDesc}
        )
    </insert>

    <insert id="batchInsert" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO AMP_CONFIG_ITEM(
            CREATE_TIME,
            UPDATE_TIME,
            CREATE_AT,
            UPDATE_AT,
            UNIQUE_TOKEN,
            ENVIRONMENT,
            APP_ID,
            APP_NAME,
            CONFIG_KEY,
            CONFIG_VALUE,
            CONFIG_TYPE,
            CONFIG_DESC
        ) VALUES
        <foreach collection="entityList" index="index" item="entity" separator=",">
            (
                NOW(),
                NOW(),
                'SYS',
                'SYS',
                0,
                #{entity.environment},
                #{entity.appId},
                #{entity.appName},
                #{entity.configKey},
                #{entity.configValue},
                #{entity.configType},
                #{entity.configDesc}
            )
        </foreach>

    </insert>

    <select id="queryByAppNameAndEnv" resultMap="AmpConfigItemEntity">
        select
            <include refid="Base_column_list"/>
        from AMP_CONFIG_ITEM
        where APP_NAME = #{appName}
        and ENVIRONMENT = #{env}
        and UNIQUE_TOKEN = 0
    </select>

</mapper>