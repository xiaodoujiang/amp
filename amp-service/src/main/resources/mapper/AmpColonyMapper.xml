<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.bmilk.amp.ampService.mapper.AmpColonyMapper">
    <resultMap id="AmpColonyEntity" type="cn.bmilk.amp.ampService.mapper.entity.AmpColonyEntity">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_at" property="createAt"/>
        <result column="update_at" property="updateAt"/>
        <result column="unique_token" property="uniqueToken"/>
        <result column="colony_name" property="colonyName"/>
        <result column="colony_desc" property="colonyDesc"/>
        <result column="environment" property="environment"/>
    </resultMap>

    <sql id="Base_column_list">
        ID,
        CREATE_TIME,
        UPDATE_TIME,
        CREATE_AT,
        UPDATE_AT,
        UNIQUE_TOKEN,
        COLONY_NAME,
        COLONY_DESC,
        ENVIRONMENT
    </sql>

    <insert id="insert">
        <selectKey keyColumn="id" keyProperty="entity.id" resultType="long" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO AMP_COLONY(
        CREATE_TIME,
        UPDATE_TIME,
        CREATE_AT,
        UPDATE_AT,
        UNIQUE_TOKEN,
        COLONY_NAME,
        COLONY_DESC,
        ENVIRONMENT
        ) VALUE(
        NOW(),
        NOW(),
        'SYS',
        'SYS',
        0,
        #{entity.colonyName},
        #{entity.colonyDesc},
        #{entity.environment}
        )
    </insert>

    <select id="queryListByEnv" resultMap="AmpColonyEntity">
        select
        <include refid="Base_column_list"/>
        from AMP_COLONY
        where ENVIRONMENT = #{env} and UNIQUE_TOKEN=0
    </select>

    <select id="queryByName" resultMap="AmpColonyEntity">
        select
        <include refid="Base_column_list"/>
        from AMP_COLONY
        where COLONY_NAME = #{colonyName}
    </select>
</mapper>