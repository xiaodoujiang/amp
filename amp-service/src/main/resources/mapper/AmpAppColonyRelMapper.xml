<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.bmilk.amp.ampService.mapper.AmpAppColonyRelMapper">
    <resultMap id="AmpAppColonyRelEntity" type="cn.bmilk.amp.ampService.mapper.entity.AmpAppColonyRelEntity">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_at" property="createAt"/>
        <result column="update_at" property="updateAt"/>
        <result column="unique_token" property="uniqueToken"/>
        <result column="app_name" property="appName"/>
        <result column="colony_name" property="colonyName"/>
    </resultMap>

    <sql id="Base_column_list">
        ID,
        CREATE_TIME,
        UPDATE_TIME,
        CREATE_AT,
        UPDATE_AT,
        UNIQUE_TOKEN,
        APP_NAME,
        COLONY_NAME
    </sql>

    <insert id="insert">
        <selectKey keyColumn="id" keyProperty="entity.id" resultType="long" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO AMP_APP_COLONY_REL(
            CREATE_TIME,
            UPDATE_TIME,
            CREATE_AT,
            UPDATE_AT,
            UNIQUE_TOKEN,
            APP_NAME,
            COLONY_NAME
        ) VALUE(
            NOW(),
            NOW(),
            'SYS',
            'SYS',
            0,
            #{entity.appName},
            #{entity.colonyName}
        )
    </insert>

    <insert id="batchInsert" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO AMP_APP_COLONY_REL(
            CREATE_TIME,
            UPDATE_TIME,
            CREATE_AT,
            UPDATE_AT,
            UNIQUE_TOKEN,
            APP_NAME,
            COLONY_NAME
        ) VALUES
        <foreach collection="entityList" index="index" item="entity" separator=",">
            (
            NOW(),
            NOW(),
            'SYS',
            'SYS',
            0,
            #{entity.appName},
            #{entity.colonyName}
            )
        </foreach>

    </insert>

    <select id="queryByAppName" resultMap="AmpAppColonyRelEntity">
        select
        <include refid="Base_column_list"/>
        from AMP_APP_COLONY_REL
        where UNIQUE_TOKEN = 0 and APP_NAME= #{appName}
    </select>

    <select id="queryByAppNameAndColony" resultMap="AmpAppColonyRelEntity">
        select
        <include refid="Base_column_list"/>
        from AMP_APP_COLONY_REL
        where UNIQUE_TOKEN = 0 and
        APP_NAME= #{appName} and
        COLONY_NAME in
        <foreach collection="colonyList" separator="," item="item" index="index" open="(" close=")">
            #{item}
        </foreach>
    </select>

    <select id="queryByAppAndColony" resultMap="AmpAppColonyRelEntity">
        select
        <include refid="Base_column_list"/>
        from AMP_APP_COLONY_REL
        where UNIQUE_TOKEN = 0 and APP_NAME= #{appName} and COLONY_NAME = #{colonyName}
    </select>

</mapper>