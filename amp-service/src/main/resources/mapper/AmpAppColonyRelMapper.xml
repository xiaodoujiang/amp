<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.bmilk.amp.ampService.mapper.AmpAppColonyRelMapper">
    <resultMap id="AmpAppEnvRelEntity" type="cn.bmilk.amp.ampService.mapper.entity.AmpAppEnvRelEntity">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_at" property="createAt"/>
        <result column="update_at" property="updateAt"/>
        <result column="unique_token" property="uniqueToken"/>
        <result column="app_name" property="appName"/>
        <result column="colony_name" property="colonyName"/>
        <result column="app_request_address" property="appRequestAddress"/>
        <result column="app_request_path" property="appRequestPath"/>
        <result column="app_username" property="appUsername"/>
        <result column="app_password" property="appPassword"/>
    </resultMap>

    <sql id="Base_column_list">
        ID,
        CREATE_TIME,
        UPDATE_TIME,
        CREATE_AT,
        UPDATE_AT,
        UNIQUE_TOKEN,
        APP_NAME,
        COLONY_NAME,
        APP_REQUEST_ADDRESS,
        APP_REQUEST_PATH,
        APP_USERNAME,
        APP_PASSWORD
    </sql>

    <insert id="insert">
        <selectKey keyColumn="id" keyProperty="entity.id" resultType="long" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO AMP_APP_COLONY_REL(
            CREATE_TIME,
            UPDATE_TIME,
            CREATE_AT,
            UPDATE_AT,
            UNIQUE_TOKEN,
            APP_NAME,
            COLONY_NAME,
            APP_REQUEST_ADDRESS,
            APP_REQUEST_PATH,
            APP_USERNAME,
            APP_PASSWORD
        ) VALUE(
            NOW(),
            NOW(),
            'SYS',
            'SYS',
            0,
            #{entity.appName},
            #{entity.colonyName},
            #{entity.appRequestAddress},
            #{entity.appRequestPath},
            #{entity.appUsername},
            #{entity.appPassword}
        )
    </insert>

</mapper>