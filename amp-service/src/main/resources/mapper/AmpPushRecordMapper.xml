<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.bmilk.amp.ampService.mapper.AmpPushRecordMapper">
    <resultMap id = "AmpColonyEntity" type = "cn.bmilk.amp.ampService.mapper.entity.AmpPushRecordEntity">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_at" property="createAt"/>
        <result column="update_at" property="updateAt"/>
        <result column="unique_token" property="uniqueToken"/>
        <result column="amp_no" property="ampNo"/>
        <result column="colony_name" property="colonyName"/>
        <result column="environment" property="environment"/>
        <result column="application_name" property="applicationName"/>
        <result column="push_status" property="pushStatus"/>
    </resultMap>

    <sql id="Base_column_list">
        ID,
        CREATE_TIME,
        UPDATE_TIME,
        CREATE_AT,
        UPDATE_AT,
        UNIQUE_TOKEN,
        AMP_NO,
        COLONY_NAME,
        ENVIRONMENT,
        APPLICATION_NAME,
        PUSH_STATUS
    </sql>


    <insert id="insert">
        <selectKey keyColumn="id" keyProperty="entity.id" resultType="long" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO AMP_PUSH_RECORD(
            CREATE_TIME,
            UPDATE_TIME,
            CREATE_AT,
            UPDATE_AT,
            UNIQUE_TOKEN,
            AMP_NO,
            COLONY_NAME,
            ENVIRONMENT,
            APPLICATION_NAME,
            PUSH_STATUS
        ) VALUE(
            NOW(),
            NOW(),
            'SYS',
            'SYS',
            0,
            #{entity.ampNo},
            #{entity.colonyName},
            #{entity.environment},
            #{entity.applicationName},
            #{entity.pushStatus}
        )
    </insert>

    <insert id="batchInsert" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO AMP_PUSH_RECORD(
            CREATE_TIME,
            UPDATE_TIME,
            CREATE_AT,
            UPDATE_AT,
            UNIQUE_TOKEN,
            AMP_NO,
            COLONY_NAME,
            ENVIRONMENT,
            APPLICATION_NAME,
            PUSH_STATUS
        ) VALUE
        <foreach collection="entityList" index="index" item="entity" separator=",">
            (
                NOW(),
                NOW(),
                'SYS',
                'SYS',
                0,
                #{entity.ampNo},
                #{entity.colonyName},
                #{entity.environment},
                #{entity.applicationName},
                #{entity.pushStatus}
            )
        </foreach>
    </insert>

</mapper>