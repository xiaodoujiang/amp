<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.bmilk.amp.ampService.mapper.AmpApplicationMapper">
    <resultMap id="AmpApplicationEntity" type="cn.bmilk.amp.ampService.mapper.entity.AmpApplicationEntity">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_at" property="createAt"/>
        <result column="update_at" property="updateAt"/>
        <result column="unique_token" property="uniqueToken"/>
        <result column="application_name" property="applicationName"/>
        <result column="application_desc" property="applicationDesc"/>
        <result column="address_env_key" property="addressEnvKey"/>
        <result column="address_env_value" property="addressEnvValue"/>
        <result column="path_env_key" property="pathEnvKey"/>
        <result column="path_env_value" property="pathEnvValue"/>
        <result column="config_file_type" property="configFileType"/>
        <result column="config_center_app" property="configCenterApp"/>
        <result column="config_group" property="configGroup"/>
        <result column="config_tenant" property="configTenant"/>
        <result column="operator" property="operator"/>
    </resultMap>

    <sql id="Base_column_list">
        ID,
        CREATE_TIME,
        UPDATE_TIME,
        CREATE_AT,
        UPDATE_AT,
        UNIQUE_TOKEN,
        APPLICATION_NAME,
        APPLICATION_DESC,
        ADDRESS_ENV_KEY,
        ADDRESS_ENV_VALUE,
        PATH_ENV_KEY,
        PATH_ENV_VALUE,
        CONFIG_FILE_TYPE,
        CONFIG_CENTER_APP,
        CONFIG_GROUP,
        CONFIG_TENANT,
        OPERATOR
    </sql>

    <insert id="insert">
        <selectKey keyColumn="id" keyProperty="entity.id" resultType="long" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO AMP_APPLICATION(
            CREATE_TIME,
            UPDATE_TIME,
            CREATE_AT,
            UPDATE_AT,
            UNIQUE_TOKEN,
            APPLICATION_NAME,
            APPLICATION_DESC,
            ADDRESS_ENV_KEY,
            ADDRESS_ENV_VALUE,
            PATH_ENV_KEY,
            PATH_ENV_VALUE,
            CONFIG_FILE_TYPE,
            CONFIG_CENTER_APP,
            CONFIG_GROUP,
            CONFIG_TENANT,
            OPERATOR
        ) VALUE(
            NOW(),
            NOW(),
            'SYS',
            'SYS',
            0,
            #{entity.applicationName},
            #{entity.applicationDesc},
            #{entity.addressEnvKey},
            #{entity.addressEnvValue},
            #{entity.pathEnvKey},
            #{entity.pathEnvValue},
            #{entity.configFileType},
            #{entity.configCenterApp},
            #{entity.configGroup},
            #{entity.configTenant},
            #{entity.operator}
        )
    </insert>

    <select id="queryAllApplication" resultMap="java.util.List">
        select
            <include refid="Base_column_list"/>
        from AMP_APPLICATION
        where UNIQUE_TOKEN = 0
    </select>

    <select id="queryByAppName" resultMap="AmpApplicationEntity">
        select
        <include refid="Base_column_list"/>
        from AMP_APPLICATION
        where UNIQUE_TOKEN = 0 and APPLICATION_NAME = #{appName}
    </select>

</mapper>